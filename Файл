#include <iostream>
#include <math.h>
#include <locale.h>
#include <string>
#include <fstream>
using namespace std;

int main() {
    setlocale(LC_ALL, "Russia");
    system("chcp 65001");
    ifstream file;
    string line;
    ifstream in("lesson.txt");
    if (!file)
    {
        cout << "Файл не открыт\n\n";
        return -1;
    }
    else
    {
        if (in.is_open())
        {
            while (getline(in, line))
            {
                cout << line << endl;
            }
        }
        in.close();
        return 1;
    }
}
